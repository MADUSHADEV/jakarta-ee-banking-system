<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>CustomerServlet</servlet-name>
        <servlet-class>com.mdev.banking.web.CustomerServlet</servlet-class>
        <ejb-ref>
            <ejb-ref-name>com.mdev.banking.web.CustomerServlet/customerService</ejb-ref-name>
            <ejb-ref-type>Session</ejb-ref-type>
            <local>com.mdev.banking.ejb.CustomerService</local>
        </ejb-ref>
    </servlet>
    <servlet-mapping>
        <servlet-name>CustomerServlet</servlet-name>
        <url-pattern>/customers</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <!-- The default page to serve -->
        <welcome-file>customers.html</welcome-file>
    </welcome-file-list>
</web-app>